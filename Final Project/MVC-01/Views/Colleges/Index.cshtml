@model IEnumerable<MVC_01.College>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />

<script>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css"/>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.6.0/dt-1.12.1/b-2.2.3/fc-4.1.0/sc-2.0.7/sb-1.3.4/sp-2.0.2/sl-1.4.0/datatables.min.css"/>

<script type="text/javascript" src="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.6.0/dt-1.12.1/b-2.2.3/fc-4.1.0/sc-2.0.7/sb-1.3.4/sp-2.0.2/sl-1.4.0/datatables.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.min.js"></script>

</script>
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
<script src="~/Scripts/jquery-ui-1.13.2.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<body>
   
    <p>
        @Html.ActionLink("Add New College", "Create", null, new { @class = "btn btn-success" })
    </p>
    <div>
        @using (Html.BeginForm("Index", "Colleges",FormMethod.Get))
        {
                <table>
                    <tr>
                        <td style="padding-top:30px;">
                            <span><b>Search By:</b></span>
                            @Html.RadioButton("SearchBy", "CollegeName", true)
                            <text> College Name</text>
                            @Html.RadioButton("SearchBy", "UniversityName")
                            <text> University Name</text>
                          
                        </td>
                    </tr>

                    <tr>
                        <td>
                            @Html.TextBox("searchValue",null,new  {Class="form-control",placeholder="Enter CollegeName or University Name" })
                        </td>
                        <td>
                            &nbsp;
                        </td>
                        <td>
                            <input type="submit" value="Search" class="btn btn-info"/>
                        </td>
                        <td style="padding-bottom:50px;">
                            &nbsp;
                        </td>
                    </tr>
                </table>
            }
    </div>
    <table id="myTable" class="table table-hover table-responsive table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CollegeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UniversityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CollegeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UniversityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td style="width:22%">
                    @Html.ActionLink("Edit", "Edit", new { id = item.CollegeID }, new { @class = " btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.CollegeID }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.CollegeID }, new { @class = "btn btn-danger" })
                </td>
            </tr>

        }
    </table>
